<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <h1>ASP.NET MVC MUSIC STORE</h1>
        <ul id="navlist">
            <li class="first">
                <a href="@Url.Content("~")" id="current">Home</a>
            </li>
            <li>
                <a href="/Store/">Store</a>
            </li>
            <li>
                @{Html.RenderAction("CartSummary", "ShoppingCart");}
            </li>
            <li>

                @if (Request.IsAuthenticated)
                {
<li>
    <a href="/Account/Logoff">Log off</a>
</li> }
            else
            {
                <li>
                    <a href="/Account/Logon">Log on</a>
                </li>
            }


                <li>
                    <a href="/OrderHistory/">Order History</a>
                </li>

                <li>
                    <a href="@Url.Content("~/StoreManager/")">Admin</a>
                </li>
            </ul>
        </div>
        @{Html.RenderAction("GenreMenu", "Store");}
        @if (ViewBag.AtOrderHistory != null)
        {
            <div id="main">
                @RenderBody()
            </div>
        }
        else
        {
<div id="main" style="max-width: 55%">
    @RenderBody()
</div>
                <div style="float: right; max-width: 30%">

                    @{Html.RenderAction("RightContent", "Home");}
                </div>}
        <div id="footer">
            built with <a href="http://asp.net/mvc">ASP.NET MVC 5</a>
        </div>
    </body>
</html>